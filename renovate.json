{
    "extends": [
        "config:base"
    ],
    "stabilityDays": 3,
    "commitMessageAction": "Changed: Update",
    "packageRules": [
        {
            "depTypeList": [
                "devDependencies"
            ],
            "commitMessageTopic": "dev dependency {{depName}}",
            "commitMessageSuffix": "NO_RELEASE",
            "major": {
                "automerge": true
            }
        },
        {
            "depTypeList": [
                "dependencies"
            ],
            "updateTypes": [
                "major"
            ],
            "commitMessageSuffix": "BREAKING"
        }
    ],
    "prCreation": "not-pending",
    "rebaseStalePrs": true,
    "rangeStrategy": "bump",
    "automerge": true,
    "major": {
        "automerge": false
    },
    "timezone": "Europe/Prague",
    "schedule": [
        "after 5am"
    ],
    "assignees": [
        "fabulator"
    ],
    "reviewers": [
        "fabulator"
    ]
}
