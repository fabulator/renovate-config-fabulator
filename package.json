{
  "name": "renovate-config-fabulator",
  "version": "1.9.0",
  "description": "Fabulator personal Renovate config present.",
  "keywords": [
    "renovate",
    "renovateconfig",
    "renovate-config"
  ],
  "homepage": "https://github.com/fabulator/renovate-config-fabulator",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fabulator/renovate-config-fabulator.git"
  },
  "license": "MIT",
  "author": "Michal Ozogan <michal@ozogan.eu>",
  "scripts": {
    "lint": "eslint ./ --ext .js --ext .json",
    "lint:fix": "npm run lint -- --fix",
    "release": "semantic-release",
    "test": "jest"
  },
  "devDependencies": {
    "commitlint-config-fabulator": "^2.1.14",
    "eslint-config-fabulator": "^1.2.3",
    "husky": "^7.0.4",
    "jest": "^27.5.0",
    "renovate": "^31.68.0",
    "semantic-release-config-fabulator": "^3.2.13"
  },
  "renovate-config": {
    "default": {
      "extends": [
        "config:base",
        ":disableDependencyDashboard"
      ],
      "enabled": true,
      "stabilityDays": 3,
      "commitMessageAction": "Changed: Update",
      "lockFileMaintenance": {
        "enabled": true,
        "automerge": true
      },
      "packageRules": [
        {
          "matchDepTypes": [
            "dependencies",
            "peerDependencies",
            "devDependencies"
          ],
          "matchUpdateTypes": [
            "minor",
            "patch"
          ],
          "enabled": false
        },
        {
          "matchUpdateTypes": [
            "lockFileMaintenance"
          ],
          "commitMessageAction": "Fixed: Update lock file to make security bots happy. NO_RELEASE EXCLUDE",
          "automerge": true
        },
        {
          "matchDepTypes": [
            "devDependencies"
          ],
          "matchUpdateTypes": [
            "major"
          ],
          "commitMessageTopic": "dev dependency {{depName}}",
          "commitMessageSuffix": "NO_RELEASE",
          "major": {
            "automerge": false
          }
        },
        {
          "matchDepTypes": [
            "dependencies",
            "peerDependencies"
          ],
          "matchUpdateTypes": [
            "major"
          ],
          "commitMessageSuffix": "BREAKING",
          "stabilityDays": 3
        }
      ],
      "prCreation": "not-pending",
      "rangeStrategy": "bump",
      "automerge": true,
      "major": {
        "automerge": false
      },
      "timezone": "Europe/Prague",
      "schedule": [
        "after 5am"
      ],
      "assignees": [
        "fabulator"
      ],
      "reviewers": [
        "fabulator"
      ]
    }
  }
}
