{
    "name": "renovate-config-fabulator",
    "version": "1.4.0",
    "description": "Fabulator personal Renovate config present.",
    "scripts": {
        "test": "jest",
        "lint": "eslint ./tests",
        "release": "semantic-release"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/fabulator/renovate-config-fabulator.git"
    },
    "homepage": "https://github.com/fabulator/renovate-config-fabulator",
    "keywords": [
        "renovate",
        "renovateconfig",
        "renovate-config"
    ],
    "devDependencies": {
        "@socifi/commitlint-config": "^1.1.0",
        "@socifi/eslint-config": "^2.10.2",
        "jest": "^26.0.1",
        "renovate": "^20.2.3",
        "semantic-release-config-fabulator": "^1.3.2"
    },
    "author": "Michal Ozogan <michal@ozogan.eu>",
    "license": "MIT",
    "renovate-config": {
        "default": {
            "extends": [
                "config:base"
            ],
            "enabled": true,
            "stabilityDays": 1,
            "commitMessageAction": "Changed: Update",
            "packageRules": [
                {
                    "depTypeList": [
                        "dependencies"
                    ],
                    "updateTypes": [
                        "patch"
                    ],
                    "commitMessageAction": "Fixed: Update"
                },
                {
                    "depTypeList": [
                        "devDependencies"
                    ],
                    "commitMessageTopic": "dev dependency {{depName}}",
                    "commitMessageSuffix": "NO_RELEASE",
                    "major": {
                        "automerge": true
                    }
                },
                {
                    "depTypeList": [
                        "dependencies"
                    ],
                    "updateTypes": [
                        "major"
                    ],
                    "commitMessageSuffix": "BREAKING",
                    "stabilityDays": 3
                },
                {
                    "packageNames": [
                        "@socifi/rollup-config",
                        "@socifi/babel-config"
                    ],
                    "commitMessageSuffix": "",
                    "stabilityDays": 0
                }
            ],
            "prCreation": "not-pending",
            "rangeStrategy": "update-lockfile",
            "automerge": true,
            "major": {
                "automerge": false
            },
            "timezone": "Europe/Prague",
            "schedule": [
                "after 5am"
            ],
            "assignees": [
                "fabulator"
            ],
            "reviewers": [
                "fabulator"
            ]
        }
    }
}
